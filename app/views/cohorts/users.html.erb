<p id="notice"><%= notice %></p>

<h1>Recruits(<%= @cohort.name %>)</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Zip Code</th>
      <th>City</th>
      <th>State</th>
      <th>Current application status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.zip_code %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.profile_status %></td>
        <td><%= user.cohort.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit Recruit information', edit_user_path(user) %></td>
        <td><%= link_to 'Delete Recruit', user_path(user),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

